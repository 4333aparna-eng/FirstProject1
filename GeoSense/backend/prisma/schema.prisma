model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  routes    Route[]
}

model Route {
  id          Int      @id @default(autoincrement())
  startPoint  String
  endPoint    String
  distance    Float
  duration    Int
  ecoFriendly Boolean
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model POI {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  location  String
  description String
  routes    Route[]  @relation("RoutePOI")
} 

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}